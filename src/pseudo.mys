"""mys-embedded-c++-before-namespace
#include <chrono>
#include <random>
"""

"""mys-embedded-c++
static thread_local std::default_random_engine generator(
    std::chrono::system_clock::now().time_since_epoch().count());
"""

def random() -> f32:
    """Returns a pseudo random floating point number in the range [0.0,
    1.0].

    """

    value: f32 = 0.0

    """mys-embedded-c++
    std::uniform_real_distribution<f32> distribution(0.0, 1.0);

    value = distribution(generator)
    """

    return value

def randint(minimum: i32, maximum: i32) -> i32:
    """Returns a pseudo random integer number in the range [minimum,
    maximum].

    """

    value: i32 = 0

    """mys-embedded-c++
    std::uniform_int_distribution<i32> distribution(minimum, maximum);

    value = distribution(generator)
    """

    return value

def randfloat(minimum: f32, maximum: f32) -> f32:
    """Returns a pseudo random floating point number in the range
    [minimum, maximum].

    """

    value: f32 = 0.0

    """mys-embedded-c++
    std::uniform_real_distribution<f32> distribution(minimum, maximum);

    value = distribution(generator)
    """

    return value

