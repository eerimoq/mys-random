@test
def test_random():
    value: float = random()
    assert_ge(value, 0.0)
    assert_le(value, 1.0)

@test
def test_randint():
    value: int = randint(-1, 2)
    assert_ge(value, -1)
    assert_le(value, 2)
    values: [int] = [-1, 0, 1, 2]
    assert_in(value, values)

@test
def test_randfloat():
    value: int = randfloat(-2.5, 2.0)
    assert_ge(value, -2.51)
    assert_le(value, 2.01)

